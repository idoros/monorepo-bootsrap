{
    "name": "monorepo-bootstrap",
    "version": "0.0.0",
    "description": "ongoing opinionated monorepo project base",
    "main": "index.js",
    "author": "Ido Rosenthal",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "clean": "rimraf packages/*/{tsconfig.tsbuildinfo,lib,dist}",
        "prestart": "yarn build",
        "build": "tsc --build",
        "build:watch": "tsc --build --watch",
        "lint": "eslint . --ext .js,.ts,.tsx -f codeframe",
        "test:types": "tsc -p ./tsconfig.test.json --noEmit",
        "test:js": "lerna run test:js --stream --parallel",
        "test:js:watch": "mocha --watch -P ./tsconfig.test.json \"./**/*.spec.{ts,tsx}\"",
        "prettify": "yarn prettier \"packages/**/*.{js,ts,tsx}\" --write"
    },
    "devDependencies": {
        "@stylable/cli": "^3.0.0",
        "@stylable/core": "^3.0.0",
        "@stylable/webpack-plugin": "^3.0.1",
        "@ts-tools/build": "^1.2.2",
        "@ts-tools/node": "^1.1.2",
        "@ts-tools/webpack-loader": "^1.1.0",
        "@types/chai": "^4.2.7",
        "@types/html-webpack-plugin": "^3.2.1",
        "@types/webpack": "^4.41.0",
        "@types/webpack-dev-server": "^3.9.0",
        "@typescript-eslint/eslint-plugin": "canary",
        "@typescript-eslint/parser": "^2.12.0",
        "@types/mocha": "^5.2.7",
        "@types/react": "^16.9.17",
        "@types/react-dom": "^16.9.4",
        "chai": "^4.2.0",
        "eslint": "^6.7.2",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-react": "^7.17.0",
        "file-loader": "^5.0.2",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.2.0",
        "lerna": "^3.19.0",
        "mocha": "^6.2.2",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "rimraf": "^3.0.0",
        "prettier": "1.19.1",
        "tsconfig-paths": "^3.9.0",
        "tsconfig-paths-webpack-plugin": "^3.2.0",
        "typescript": "^3.7.4",
        "webpack": "^4.41.3",
        "webpack-bundle-analyzer": "^3.6.0",
        "webpack-cli": "^3.3.10",
        "webpack-dev-server": "^3.9.0",
        "webpack-filter-warnings-plugin": "^1.2.1",
        "yargs": "^15.0.2"
    }
}